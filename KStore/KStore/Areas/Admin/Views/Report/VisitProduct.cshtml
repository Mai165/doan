@{ ViewData["Title"] = "Index"; }
@section Styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <script src="~/app/controllers/report/visitproduct.js" asp-append-version="true"></script>
    <script>
        var pageObj = new visitController();
        pageObj.initialize();
    </script>

}
<div class="page-title">
    <div class="title_left">
        <h3>Report</h3>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item active">
                <a class="nav-link active" href="#tab1" role="tab" aria-expanded="true" data-toggle="tab">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#tab2" role="tab" data-toggle="tab">Detail</a>
            </li>
            @*<li class="nav-item">
                    <a class="nav-link" href="#tab3" role="tab" data-toggle="tab">references</a>
                </li>*@
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="tab1">
                <div style="padding:5px;" id="total-data"></div>
                <div class="x_panel" id="report-revenues">
                    <canvas id="myChart" style="width:100%"></canvas>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tab2">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table id="tbl-product" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Image</th>
                                            <th>Product name</th>
                                            <th>Total Visit</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbl-content"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <script id="table-template" type="x-tmpl-mustache">
                    <tr>
                        <td>{{Id}}</td>
                        <td>{{{Image}}}</td>
                        <td>{{Name}}</td>
                        <td>{{{TotalVisit}}}</td>
                    </tr>
                </script>
            </div>
        </div>
    </div>
</div>
