@model KStore.Models.BlogDispViewModel
@{ 
//ViewData["Title"] = Model.Data.CurrentPage == 1 ? " - Blog " + Model.Data.CurrentPage;
//ViewData["MetaKeyword"] = Model.Data.CurrentPage == 1 ?  " - Blog " + Model.Data.CurrentPage;
//ViewData["MetaDescription"] = Model.Data.CurrentPage == 1 ?" - Blog " + Model.Data.CurrentPage;
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li><strong>Blog</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <!-- Center colunm-->
    <div class="blog-wrapper">
        <div class="page-title">
            <h2>Blog post</h2>
        </div>
        <ul class="blog-posts">
            @foreach (var item in Model.Data.Results)
            {
                var url = "/" + item.SeoAlias + "-b." + item.Id + ".html";
                <li class="post-item col-md-4">
                    <div class="blog-box">
                        <a href="@url"> <img class="primary-img" src="@item.Image" alt="HTML template"></a>
                        <div class="blog-btm-desc">
                            <div class="blog-top-desc">
                                <div class="blog-date">@item.DateCreated.ToString("dd / MM yyyy")</div>
                                <h4><a href="/Blog/Detail">@item.Description</a></h4>
                                <div class="jtv-entry-meta"> <i class="fa fa-user-o"></i> <strong>Admin</strong> <a href="#"><i class="fa fa-commenting-o"></i> <strong>15 Comments</strong></a></div>
                            </div>
                            <p>@item.Name</p>
                            <a class="read-more" href="@url"> Read More</a>
                        </div>
                    </div>
                </li>            }
        </ul>
        @(await Component.InvokeAsync("Pager", Model.Data))
    </div>
    <!-- ./ Center colunm -->

</div>